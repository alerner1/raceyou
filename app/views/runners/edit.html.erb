<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h3>Edit Profile</h3>
      <%= bootstrap_form_for(@runner) do |f| %>
        <%= f.text_field :username %>
        <%= f.email_field :email %>
        <%= f.password_field :password %>
        <%= f.text_field :name %>
        <%= f.number_field :age %>
        <%= f.form_group :gender, label: { text: "Gender:" } do %>
          <%= f.radio_button :gender, "M", label: "M", inline: true %>
          <%= f.radio_button :gender, "F", label: "F", inline: true %>
          <%= f.radio_button :gender, "O", label: "Other", inline: true %>
        <% end %>
        <%= f.submit "Save" %>
      <% end %>
    </div>
  </div>
</div>