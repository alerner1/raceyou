<div class="m-5">
  <h1 class="text-center">Available Races</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Length</th>
        <th scope="col">Created By</th>
        <th scope="col">Expires</th>
        <th scope="col">Participants</th>
      </tr>
    </thead>
    <tbody>
      <% @races.each do |race| %>
        <tr>
          <td><%= link_to race.length, race_path(race) %></td>
          <td> <%= link_to Runner.all.find(race.created_by.to_i).name, runner_path(Runner.all.find(race.created_by.to_i)) if race.created_by %> </td>
          <td><%= race.expiration_date.strftime("%m/%d/%Y") %></td>
          <td><%= race.registrations.length %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
