<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>Log In</h1>
      <%= bootstrap_form_for(:session, url: login_path) do |f| %>
        <%= f.email_field :email %>
        <%= f.password_field :password %>
        <%= f.submit "Log In" %>
      <% end %>
      <p>Not signed up yet? <%= link_to "Create account.", new_runner_path %></p>
    </div>
  </div>
</div>