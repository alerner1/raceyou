<!DOCTYPE html>
<html>
  <head>
    <title>RaceYou</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-5">
      <a class="navbar-brand" href="#">RaceYou!</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/runners/<%= @current_user.id if @current_user %>">My Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/runners">Runners</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/races">Races</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/rank_categories">Rankings</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/races/new">Create a Race</a>
          </li>
      </div>
      <%= button_to "Logout", logout_path, method: :delete, data: {confirm: "Are you sure you want to log out?"}, class: "btn btn-outline-success my-2 my-sm-0" %>
    </nav>
    <%= yield %>
  </body>
</html>
